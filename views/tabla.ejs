<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabla de multiplicar</title>
</head>
<body>
    <%-include('partials/header.ejs')%>
    <%-include('partials/nav.ejs')%>
    <br>
    <form action="/tabla" method="post">
        <label for="tabla">Tabla</label>
        <input type="number" id="numero" name="numero" required value= "<%=numero%>">
        <button type="submit">Enviar</button>
        <button type="button" name="limpiar" onclick="limpiarCampo()">Limpiar</button>

    </form>
    <section>
        <div id="tablaGenerada">
        <%
        let res = 0;
        if(numero!=null){
            for(con=1; con <=10; ++con){
                res = con* numero;
      
         %>
            <h3><%=numero%> * <%=con%> = <%=res%> </h3>
        <%
        
    }
}  
        %> 

        
    </section>
</div>
    <br>
    <%-include('partials/footer.ejs')%>
    <script>
        function limpiarCampo(){
            var botonPresionado = event.target;
            if(botonPresionado.name == 'limpiar'){
                document.getElementById('numero').value = '';
                var tablaGenerada = document.querySelector('section');
                tablaGenerada.innerHTML='';
            }
        }
    </script>
</body>
</html>
